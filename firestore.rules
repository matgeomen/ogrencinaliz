rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    match /results/{resultId} {
      // Allow read access to any signed-in user (including anonymous)
      allow read: if isSignedIn();
      
      // Allow write access only if the user is signed in.
      // For more granular control, you could add a 'userId' field to your documents
      // and check `request.auth.uid == request.resource.data.userId`.
      allow write: if isSignedIn();
    }
  }
}
