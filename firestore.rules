rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Check if the user is an admin by looking up their role in their user document.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow users to create their own user document upon registration.
      allow create: if request.auth.uid == userId;
      
      // Allow users to read/update their own profile. Admins can read/update any profile.
      allow read, update: if request.auth.uid == userId || isAdmin();
      
      // Only admins can delete users (for now, this can be changed).
      allow delete: if isAdmin();
      
      // Only admins can list all users.
      allow list: if isAdmin();
    }
    
    match /users/{userId}/results/{resultId} {
      // A user can read, write, and delete their own results.
      // An admin can read, write, and delete any user's results.
      allow read, write, delete: if request.auth.uid == userId || isAdmin();
    }
  }
}
